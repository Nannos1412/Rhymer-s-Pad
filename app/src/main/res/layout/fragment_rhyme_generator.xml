<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RhymeGenerator">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/fragment_rhyme_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/fragment_rhyme_editText"
        android:text="@string/test"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/fragment_rhyme_editText"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true" />

    <LinearLayout
        android:id="@+id/fragment_rhyme_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/fragment_rhyme_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

</RelativeLayout>